                 ${TMLQCD_build}/matrix_utils.o ${TMLQCD_build}/source_generation.o \
                 ${TMLQCD_build}/gettime.o

# search path for modules
MDIR = ./ ../random ../modules $(TMLQCD) $(TMLQCD)/include
VPATH = .:$(MDIR)

# Logging option (-mpilog or -mpitrace or -mpianim)
