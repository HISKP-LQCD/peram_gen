all: rmxeq mkdep mkxeq
.PHONY: all

# main programs and modules to be compiled

MAIN = main

GENERAL = distillery ranlxs input_parms
MODULES = $(GENERAL)


# tmLQCD paths
TMLQCD = /p/home/jusers/pittler1/juwels/code/tmlqcd
TMLQCD_build = /p/home/jusers/pittler1/juwels/build/tmlqcd
