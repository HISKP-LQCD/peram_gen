################################################################################
#
# Makefile to compile and link C programs with MPI subroutines
#
# Version valid for Linux machines with MPICH
#
# "make" compiles and links the specified main programs and modules,
# using the specified libraries (if any), and produces the executables
#
# "make clean" removes all files generated by "make"
#
# Dependencies on included files are automatically taken care of
#
################################################################################

all: rmxeq mkdep mkxeq
.PHONY: all

# main programs and modules to be compiled

MAIN = main

GENERAL = distillery ranlxs input_parms
MODULES = $(GENERAL)

# tmLQCD paths
 TMLQCD = /homec/hbn28/hbn289/tmLQCD_repo2/tmLQCD
 TMLQCD_build = /homec/hbn28/hbn288/build/tmLQCD_arpack/4dim_esslsmpbg_nospi

# search path for modules
MDIR = ./ ../random ../modules $(TMLQCD) $(TMLQCD)/include $(TMLQCD_build)
VPATH = .:$(MDIR)

# Logging option (-mpilog or -mpitrace or -mpianim)
LOGOPTION =

LIMEPATH = /homec/hbn28/hbn280/head/lemon
LIMEPATH2 = /homec/hbn28/hbn280/head/lime-1.3.2


# additional include directories
INCPATH = /bgsys/drivers/ppcfloor/arch/include/ /bgsys/drivers/ppcfloor/comm/xl.ndebug/include \
					../include /homec/hbn28/hbn281/eigen $(TMLQCD)/ \
          $(TMLQCD)/include $(TMLQCD_build) $(LIMEPATH)/include $(LIMEPATH2)/include


# additional libraries
# need to link against probably all libs in $(TMLQCD)/lib/
LIBS = wrapper hmc monomial meas buffers operator solver init linalg wrapper xchange io \
       wrapper meas buffers hmc monomial operator solver init linalg wrapper xchange rational io \
       esslsmpbg parpack arpack lapack esslsmpbg xlf90_r xl xlopt xlf90_r xlfmath xlsmp pthread lemon \
       lime xl xlopt xlf90_r xlfmath xlsmp pthread xlf90 xlomp_ser dl m nss_files \
       nss_dns resolv m 

#include "tmLQCD.h"

LIBPATH = /usr/local/lib $(TMLQCD_build)/lib  $(LIMEPATH)/lib/ \
				  /bgsys/local/lib/ \
          /bgsys/ibm_essl/prod/opt/ibmmath/lib64 \
	  			/bgsys/drivers/toolchain/V1R2M1_base-efix030/gnu-linux/lib/gcc \
	  			/bgsys/drivers/toolchain/V1R2M1_base-efix030/gnu-linux/powerpc64-bgq-linux/lib \
	  			/bgsys/drivers/toolchain/V1R2M1_base-efix030/gnu-linux/lib/gcc/powerpc64-bgq-linux/4.4.6 \
 				  /usr/local/bg_soft/lapack/3.5.0/lib \
          /homec/hbn28/hbn280/lib \
	  			/homec/hbn28/hbn280/head/lime-1.3.2/lib \
	  			/homec/hbn28/hbn280/lib/lemon/lib \
          /opt/ibmcmp/xlf/bg/14.1/lib64 \
          /opt/ibmcmp/xlsmp/bg/3.1/bglib64 \
	  			/opt/ibmcmp/xlmass/bg/7.3/bglib64 \
          /homec/hbn28/hbn289/Local/packages/bgq_esslsmp/20150125/arpack/lib \
          /homec/hbn28/hbn289/Local/packages/bgq_esslsmp/20150125/lapack/lib


# scheduling and optimization options
#CXXFLAGS =  -std=c++0x -pedantic -Wall -O2 -fopenmp 
#CFLAGS =    -std=c99   -pedantic -Wall -O2 -fopenmp 
CFLAGS =   -O2 -qarch=qp -qtune=qp -qsrcmsg -qsmp=omp:noauto:schedule=static -qthreaded
CXXFLAGS = -O2 -qarch=qp -qtune=qp -qsrcmsg -qsmp=omp:noauto:schedule=static -qthreaded

############################## do not change ###################################

SHELL=/bin/bash
#CXX=mpig++
#CLINKER=mpig++
#CC=mpigcc
CXX=/bgsys/drivers/ppcfloor/comm/xl.ndebug/bin/mpixlcxx_r
CC=/bgsys/drivers/ppcfloor/comm/xl.ndebug/bin/mpixlc_r
CLINKER=/bgsys/drivers/ppcfloor/comm/xl.ndebug/bin/mpixlcxx_r
CCDEP=mpig++

CMODULES = start ranlxd #DirectPut

PGMS= $(MAIN) $(MODULES)

-include $(addsuffix .d,$(PGMS))

# rule to make dependencies
$(addsuffix .d,$(PGMS)): %.d: %.cpp Makefile
	@ $(CCDEP) -ansi $< -MM $(addprefix -I,$(INCPATH)) -o $@

# rule to make dependencies
$(addsuffix .d,$(CMODULES)): %.d: %.c Makefile
	@ $(CC) -ansi $< -MM $(addprefix -I,$(INCPATH)) -o $@

# rule to compile source programs
$(addsuffix .o,$(PGMS)): %.o: %.cpp Makefile
	$(CXX) $< -c $(CXXFLAGS) $(LOGOPTION) $(addprefix -I,$(INCPATH))

$(addsuffix .o,$(CMODULES)): %.o: %.c Makefile
	$(CC) -DHAVE_CONFIG_H $< -c $(CFLAGS) $(addprefix -I,$(INCPATH))

# rule to link object files
$(MAIN): %: %.o $(addsuffix .o,$(MODULES) $(CMODULES)) Makefile
	@ echo $(LIBPATH)
	$(CLINKER) $< $(addsuffix .o,$(MODULES) $(CMODULES)) $(CFLAGS) $(LOGOPTION) \
        $(addprefix -L,$(LIBPATH)) $(addprefix -l,$(LIBS)) -o $@

# produce executables
mkxeq: $(MAIN)

# remove old executables
rmxeq:
	@ -rm -f $(MAIN); \
        echo "delete old executables"


# make dependencies

mkdep:  $(addsuffix .d,$(PGMS))
	@ echo "generate tables of dependencies"


# clean directory

clean:
	@ -rm -rf *.d *.o *.alog *.clog *.slog $(MAIN)
.PHONY: clean

################################################################################
